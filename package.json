{
  "name": "@rsbuild/plugin-source-build",
  "version": "1.0.1",
  "description": "An Rsbuild plugin to provide support for monorepo source code referencing.",
  "repository": "https://github.com/rspack-contrib/rsbuild-plugin-source-build",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "lint:write": "biome check . --write",
    "prepare": "simple-git-hooks && npm run build",
    "test": "playwright test"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "biome check --write --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "fast-glob": "^3.3.2",
    "json5": "^2.2.3",
    "yaml": "^2.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@playwright/test": "^1.45.3",
    "@rsbuild/core": "^1.0.1-beta.8",
    "@rsbuild/plugin-react": "1.0.1-beta.10",
    "@rsbuild/plugin-type-check": "1.0.1-beta.10",
    "@types/node": "^20.14.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "nano-staged": "^0.8.0",
    "playwright": "^1.45.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "@rsbuild/core": "0.x || 1.x || ^1.0.1-beta.0"
  },
  "peerDependenciesMeta": {
    "@rsbuild/core": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.6.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
