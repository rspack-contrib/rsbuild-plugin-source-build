{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["DOM", "ESNext"],
    "module": "ES2020",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "declarationMap": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    // make type checker faster by not including types
    "types": [],
    "paths": {
      "@/*": ["./src/*"],
      "@common/*": ["./src/common/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src"]
}
